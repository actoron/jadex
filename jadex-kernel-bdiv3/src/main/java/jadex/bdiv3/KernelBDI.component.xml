<?xml version="1.0" encoding="UTF-8"?>
<!--
  BDIV3 kernel component.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
						http://jadex.sourceforge.net/jadex-component-2.1.xsd"
	name="KernelBDI" package="jadex.bdiv3">
	
	<imports>
		<import>jadex.commons.*</import>
		<import>jadex.bridge.service.types.factory.*</import>
	</imports>
	
	<properties>
		<property name="kernel.types" class="String[]">
			new String[]{"BDI.class"}
		</property>
	</properties>
	
	<services>
		<providedservice class="IComponentFactory">
			<implementation>
				new BDIAgentFactory($component.getServiceProvider())
			</implementation>
		</providedservice>
	</services>
</componenttype>