<?xml version="1.0" encoding="UTF-8"?>
<!--
  Application kernel.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
						http://jadex.sourceforge.net/jadex-component-2.2.xsd"
	name="KernelApplication" package="jadex.application">
	
	<imports>
		<import>jadex.bridge.service.types.factory.*</import>
	</imports>
	
	<properties>
		<property name="kernel.types" class="String[]">
			new String[]{"application.xml"}
		</property>
	</properties>
	
	<services>
		<providedservice class="IComponentFactory">
			<implementation>
				new ApplicationComponentFactory($component.getServiceProvider())	
			</implementation>
		</providedservice>
	</services>
</componenttype>