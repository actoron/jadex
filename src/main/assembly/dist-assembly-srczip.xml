<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

	<id>sources</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<!-- Selected by profile. <includes> <include>jadex:*</include> </includes> -->
			<excludes>
			  	<!-- Exclude auto update. -->
				<exclude>*:*-autoupdate</exclude>
			    <!-- Exclude maven dependency manager. -->
				<exclude>*:*-maven</exclude>
			    <!-- Exclude JMonkey support from normal dist to save space. -->
				<exclude>*:*-jmonkey</exclude>
				<!-- Exclude all maven distribution modules -->
				<exclude>*:*-distribution-*</exclude>
				<!-- Exclude all webservice modules -->
				<exclude>*:*-webservice*</exclude>
				<!-- Exclude all secure transport modules -->
				<exclude>*:*-securetransport</exclude>
				<!-- Exclude all cli modules -->
				<exclude>*:*-cli</exclude>
				<!-- Exclude relay standalone module -->
				<exclude>*:*-relay-standalone</exclude>
			</excludes>
		    <sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>sources/${module.artifactId}</outputDirectory>
						<includes>
							<include>src/**</include>
							<include>lib/**</include>
							<include>pom.xml</include>
						</includes>
						<excludes>
							<exclude>**/dungeonkeeper/</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
	
	<fileSets>
		<fileSet>
			<directory>docs/jadex-example-project</directory>
			<outputDirectory>sources/docs/jadex-example-project</outputDirectory>
		</fileSet>
	</fileSets>	
	

	<files>
		<file>
			<source>pom.xml</source>
			<outputDirectory>sources</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly-srczip.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly-exampleprojectzip.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>docs/readme-building.txt</source>
			<outputDirectory>sources</outputDirectory>
		</file>
				
		<!-- Copy files required for distribution build -->
		<file>
			<source>docs/junit-3.8.1.jar</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/readme.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/license.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/api-changes.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/jcc.settings.xml</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/default.settings.xml</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/jadex.bat</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/jadex_no_awareness.bat</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/jadex.sh</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/jadex_no_awareness.sh</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/howtostart.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/xs3p.xsl</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/readme-building.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
	</files>
</assembly>