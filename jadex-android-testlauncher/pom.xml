<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-android-testlauncher</artifactId>
	<packaging>apk</packaging>
	<name>jadex-android-testlauncher</name>

	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-android-parent</artifactId>
		<version> 3.0-SNAPSHOT </version>
		<relativePath>../jadex-android-parent/pom.xml</relativePath>
	</parent>

	<description>
		App that can contains the Jadex test agents. Does nothing. Started from external JUnit test launcher app.
	</description>

	<dependencies>
	
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-android-platformapp</artifactId>
			<version>${project.version}</version>
<!-- 			<scope>provided</scope> -->
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-android-bluetooth</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-bpmn</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-gpmn</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-gpmn</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-bdibpmn</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-tools-base-swing</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
				</exclusion>
					<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-bdibpmn</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-bdi</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>com.toedter</groupId>
					<artifactId>jcalendar</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-tools-base-swing</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-bdi</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-micro</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-tools-base-swing</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.github.sarxos</groupId>
					<artifactId>webcam-capture</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-bdiv3</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-tools-base-swing</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-agr</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.toedter</groupId>
					<artifactId>jcalendar</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.kohsuke</groupId>
					<artifactId>asm4</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-bdiv3</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<plugins>	
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<extensions>true</extensions>
				<!-- 
				<configuration>
					<dex>
						<jvmArguments>
							<argument>-Xms256m</argument>
							<argument>-Xmx2048m</argument>
						</jvmArguments>
					</dex>
				</configuration>
				-->
				<!-- <generateApk>true</generateApk> -->
				<!-- <skip>true</skip> -->
				<!-- </configuration> -->
				<!-- <executions> -->
				<!-- <execution> -->
				<!-- <id>dex</id> -->
				<!-- <goals> -->
				<!-- <goal>dex</goal> -->
				<!-- </goals> -->
				<!-- </execution> -->
				<!-- <execution> -->
				<!-- <id>apk</id> -->
				<!-- <goals> -->
				<!-- <goal>apk</goal> -->
				<!-- </goals> -->
				<!-- </execution> -->
				<!-- </executions> -->
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>net.sourceforge.jadex</groupId>
				<artifactId>jadex-android-maven-plugin</artifactId>
				<configuration>
					<enhanceDependencies>true</enhanceDependencies>
<!-- 					<removeAndroidIncompatible>true</removeAndroidIncompatible> -->
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>generateBDI</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>net.sourceforge.jadex</groupId>
										<artifactId>jadex-android-maven-plugin</artifactId>
										<versionRange>{$project.version}</versionRange>
										<goals>
											<goal>generateBDI</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute>
<!-- 											<runOnConfiguration>true</runOnConfiguration> -->
<!-- 											<runOnIncremental>true</runOnIncremental> -->
										</execute>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
