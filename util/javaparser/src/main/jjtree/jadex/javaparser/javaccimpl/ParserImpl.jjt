//-------- Tokens --------

// Whitespaces
SKIP:
{
	" "
|	"\t"
|	"\n"
|	"\r"
|	"\f"
}

// Comments.
SPECIAL_TOKEN:
{
	// "//" followed by arbitrary characters (except \n, \r) and then \r or \n.
	<SINGLE_LINE_COMMENT:	"//" (~["\n","\r"])* ("\n"|"\r"|"\r\n")>

	// ???
|	<MULTI_LINE_COMMENT:	"/*" (~["*"])* "*" ("*" | (~["*","/"] (~["*"])* "*"))* "/">
}

// Reserved Words
TOKEN:
{
	<NEW:	"new">
|	<INSTANCEOF:	"instanceof">
}

// Case insensitive tokens.
TOKEN[IGNORE_CASE]:
{
	< SELECT: "select" >
|	< ALL: "all" >
|	< ANY: "any" >
|	< ONE: "one" >
|	< IOTA: "iota" >
|	< FROM: "from" >
|	< IN: "in" >
|	< WHERE: "where" >
|	< ORDER: "order" >
|	< BY: "by" >
|	< ASC: "asc" >
|	< DESC: "desc" >
}

// Basic types
TOKEN:
{
	<BOOLEAN:	"boolean">
|	<DOUBLE:	"double">
|	<FLOAT:	"float">
|	<LONG:	"long">
|	<INT:	"int">
|	<SHORT:	"short">
|	<BYTE:	"byte">
|	<CHAR:	"char">
}

// Predefined literals
TOKEN:
{
	<TRUE:	"true">
|	<FALSE:	"false">
|	<NULL:	"null">
}

// Literals
TOKEN:
{
	// Integer may be decimal, hex, or octal.
	<INTEGER_LITERAL:
		<DECIMAL_LITERAL> (["l","L"])?
		| <HEX_LITERAL> (["l","L"])?
		| <OCTAL_LITERAL> (["l","L"])?
	>
|	<#DECIMAL_LITERAL: ("0") | (["1"-"9"] (["0"-"9"])*) >
|	<#HEX_LITERAL: "0" ["x","X"] (["0"-"9","a"-"f","A"-"F"])+ >
|	<#OCTAL_LITERAL: "0" (["1"-"9"]) (["0"-"7"])* >

	// Float (may have exponent).
|	<FLOATING_POINT_LITERAL:
		(["0"-"9"])+ "." (["0"-"9"])* (<EXPONENT>)? (["f","F","d","D"])?
		| "." (["0"-"9"])+ (<EXPONENT>)? (["f","F","d","D"])?
		| (["0"-"9"])+ <EXPONENT> (["f","F","d","D"])?
		| (["0"-"9"])+ (<EXPONENT>)? ["f","F","d","D"]
	>
|	<#EXPONENT: ["e","E"] (["+","-"])? (["0"-"9"])+ >

	// Character (contained in single quotes).
|	<CHARACTER_LITERAL:
		"'"
		(
			// Everything except quote, backslash, linefeed, or return.
			(~["'","\\","\n","\r"])
			// Escaped characters are also allowed.
			| ("\\"
				( ["n","t","b","r","f","\\","'","\""]
/*				| ["0"-"7"] ( ["0"-"7"] )?
				| ["0"-"3"] ["0"-"7"] ["0"-"7"]
*/				)
			)
		)
		"'"
	>

	// String (contained in double quotes).
|	<STRING_LITERAL:
		"\""
		(
			// Everything except double quote, backslash, linefeed, or return.
			(~["\"","\\","\n","\r"])
			// Escaped characters are also allowed.
			| ("\\"
				( ["n","t","b","r","f","\\","'","\""]
/*				| ["0"-"7"] ( ["0"-"7"] )?
				| ["0"-"3"] ["0"-"7"] ["0"-"7"]
*/				)
			)
		)*
		"\""
	>
}

// "?" used in conditional and for clips variable identifiers
TOKEN:
{
	<QUESTIONMARK:	"?">
}


// Identifiers (have to start with letter).
TOKEN:
{
	<IDENTIFIER:	(<QUESTIONMARK>)? <LETTER> (<LETTER>|<DIGIT>)* >

	// Allowed characters for LETTER.
|	<#LETTER:[
		"\u0024",
		"\u0041"-"\u005a",
		"\u005f",
		"\u0061"-"\u007a",
		"\u00c0"-"\u00d6",
