<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-platform-extension-webservice</artifactId>
	<packaging>jar</packaging>
	<name>jadex-platform-extension-webservice</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent</artifactId>
		<version> 3.0-SNAPSHOT </version>
		<relativePath>../jadex-parent/pom.xml</relativePath>
	</parent>

	<description>
		The Jadex webservice platform extension package contains
		basic functionality for WSDL web services and REST web services.
	</description>
	
	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-commons</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-xml</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-javaparser</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-bridge</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-micro</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>javax.ws.rs-api</artifactId>
			<version>2.0.1</version>
		</dependency>
		
	</dependencies>
	
	<!-- Set scopes of standard jadex jars to provided for excluding them from dist -->
	<profiles>
		<profile>
			<id>dist</id>
			<dependencies>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-commons</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
		
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-xml</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
		
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-javaparser</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
		
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-bridge</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
		
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-micro</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>