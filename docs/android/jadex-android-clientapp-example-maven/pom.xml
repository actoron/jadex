<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>mygroup</groupId>
	<artifactId>jadex-android-clientapp-example-maven</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>apk</packaging>

	<description>
	This project contains a demo of a jadex clientapp.
	The Jadex platform app must be installed prior to running this application!
	Must be built with maven.
	</description>

	<properties>
		<!-- Specify desired Jadex version here. -->
		<jadex.version> 3.0-SNAPSHOT </jadex.version>
	</properties>
	
	<!-- Additional repositories (only required when using snapshot and/or pro version of Jadex).
	     You may use www0.activecomponents.org/..., www1.activecomponents.org/... to address mirrors directly. -->
	<repositories>
		<repository>
			<id>jadex-snapshots</id>
			<url>http://www1.activecomponents.org/nexus/content/repositories/snapshots</url>
		</repository>
	<!-- 
		<repository>
			<id>jadex-pro-snapshots</id>
			<url>http://www1.activecomponents.org/nexus/content/repositories/pro-snapshots</url>
		</repository>
		<repository>
			<id>jadex-pro-releases</id>
			<url>http://www1.activecomponents.org/nexus/content/repositories/pro-releases</url>
		</repository>
	-->
	</repositories>

	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-android-platformclient</artifactId>
			<version>${jadex.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-android-commons</artifactId>
			<version>${jadex.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bpmn</artifactId>
			<version>${jadex.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bdi</artifactId>
			<version>${jadex.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-runtimetools-android</artifactId>
			<version>${jadex.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-platform-extension-webservice-android</artifactId>
			<version>${jadex.version}</version>
			<scope>provided</scope>
		</dependency>
		<!-- 
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-android-platformapp</artifactId>
			<version>${jadex.version}</version>
			<scope>provided</scope>
			<type>apk</type>
		</dependency>
		 -->
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>2.2.1</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<androidManifestFile>${project.basedir}/AndroidManifest.xml</androidManifestFile>
					<assetsDirectory>${project.basedir}/assets</assetsDirectory>
					<resourceDirectory>${project.basedir}/res</resourceDirectory>
					<nativeLibrariesDirectory>${project.basedir}/src/main/native</nativeLibrariesDirectory>
					<sdk>
						<path>${env.ANDROID_HOME}</path>
						<platform>8</platform>
					</sdk>
					<undeployBeforeDeploy>false</undeployBeforeDeploy>
					<generateApk>true</generateApk>
					<dex>
						<jvmArguments>
							<jvmArgument>-Xms256m</jvmArgument>
							<jvmArgument>-Xmx1500m</jvmArgument>
						</jvmArguments>
						<coreLibrary>false</coreLibrary>
						<noLocals>false</noLocals>
						<optimize>true</optimize>
					</dex>
					
					<zipalign>true</zipalign>

					<manifest>
						<versionName>${project.version}</versionName>
						<debuggable>true</debuggable>
						<versionCodeAutoIncrement>true</versionCodeAutoIncrement>
					</manifest>
				</configuration>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
		
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.jayway.maven.plugins.android.generation2
										</groupId>
										<artifactId>
											android-maven-plugin
										</artifactId>
										<versionRange>
											[3.8.1,)
										</versionRange>
										<goals>
											<goal>consume-aar</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
