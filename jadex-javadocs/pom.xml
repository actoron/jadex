<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-javadocs</artifactId>
	<packaging>jar</packaging>
	<name>jadex-javadocs</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent</artifactId>
		<version> 3.0-SNAPSHOT </version>
		<relativePath>../jadex-parent/pom.xml</relativePath>
	</parent>

	<description>
		This project is used for generating the complete Jadex javadoc documentation
	</description>

	<build>
		<plugins>
			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-javadoc-plugin</artifactId>
        		<version>2.8.1</version>
				<executions>
					<execution>
						<id>attach-javadoc</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
						    <finalName>jadex-${project.version}</finalName>
						    <doctitle>Jadex Active Component Platform ${project.version} API.</doctitle>
							<windowtitle>Jadex Active Component Platform ${project.version} API.</windowtitle>
							<groups>
								<group>
									<title>Core Packages</title>
									<packages>jadex.commons*:jadex.bridge*</packages>
								</group>
								<group>
									<title>Micro Agent Packages</title>
									<packages>jadex.micro*</packages>
								</group>
								<group>
									<title>BPMN Process Packages</title>
									<packages>jadex.bpmn*</packages>
								</group>
								<group>
									<title>BDI Agent Packages</title>
									<packages>jadex.bdi*</packages>
								</group>
								<group>
									<title>Web Service Extension Packages</title>
									<packages>jadex.extension.ws*:jadex.extension.rs*</packages>
								</group>
								<group>
									<title>2D/3D Environment Extension Packages</title>
									<packages>jadex.extension.envsupport*</packages>
								</group>
								<group>
									<title>Agent-Group-Role (AGR) Extension Packages</title>
									<packages>jadex.extension.agr*</packages>
								</group>
							</groups>						
							<excludePackageNames>
								*impl*,
								jadex.base.gui.*tree*,
								jadex.base.gui.*filechooser*, <!-- doesn't work without '*'? -->
								jadex.base.gui.*jtable* <!-- doesn't work without '*'? -->
							</excludePackageNames>
							<show>public</show>
							<detectLinks>true</detectLinks>
							<includeDependencySources>true</includeDependencySources>
							<dependencySourceIncludes>
								<dependencySourceInclude>net.sourceforge.jadex:*</dependencySourceInclude>
							</dependencySourceIncludes>
						</configuration>
					</execution>
				</executions>
        	</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- Core API -->
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-commons</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-bridge</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-javaparser</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-xml</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- Kernels -->
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-micro</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bpmn</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<!-- BDI kernel -->
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bdibpmn</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applib-bdi</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bdi</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bdiv3</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- Extensions -->
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-extension-agr</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-extension-envsupport</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-platform-extension-webservice</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>
