<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>Test maintain goal suspension.</H3>

	The test plan creates a maintain goal and suspends it
	while it is in process.
	Then the goal is reactivated to see if it will continue to work.
-->
<agent xmlns="http://www.activecomponents.org/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.activecomponents.org/jadex-bdi
	                    http://www.activecomponents.org/jadex-bdi-${jadex_build_version}.xsd"
	name="MaintainGoalContext"
	package="jadex.bdi.testcases.goals">

	<imports>
		<import>jadex.bdi.testcases.*</import>
		<import>java.util.logging.Level</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
	</capabilities>

	<beliefs>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testresults"  result="true">
			<concrete ref="testcap.testresults"/>
		</beliefref>
		<belief name="count" class="int">
			<fact>0</fact>
		</belief>
		<belief name="context" class="boolean">
			<fact>true</fact>
		</belief>
	</beliefs>

	<goals>
		<maintaingoal name="maintain" exclude="never" retrydelay="100"><!-- dummy retry delay overridden by test plan -->
			<contextcondition>
 				$beliefbase.context
			</contextcondition>
			<maintaincondition>
 				$beliefbase.count==5
			</maintaincondition>
		</maintaingoal>
	</goals>

	<plans>
		<plan name="test">
			<body class="MaintainTestPlan"/>
		</plan>
		
		<plan name="increment">
			<parameter name="beliefname" class="String">
				<value>"count"</value>
			</parameter>
			<body class="BeliefIncrementPlan"/>
			<trigger>
				<goal ref="maintain"/>
			</trigger>
		</plan>
	</plans>
	
	<properties>
		<property name="logging.level">Level.INFO</property>
		<property name="debugging">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief cref="testcap.testcase_cnt">
					<fact>4</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>

</agent>
